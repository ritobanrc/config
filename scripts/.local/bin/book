#!/bin/zsh

source ~/.zshrc

# cd /Usrs/ritoban/Library/CloudStorage/OneDrive-UCSanDiego/ebooks
cd "/Users/ritoban/OneDrive - UC San Diego/ebooks"


name=`fd -e epub -e pdf -e djvu | while read line ; 
do
    basename "$line"
done | fzf --reverse`

echo $name

filename=`fd --fixed-strings "$name"`
echo "Opening " $filename "\n"


case "$name" in 
*.pdf )
    open "$filename" ;;
*.djvu )
    #open -a Zathura "$filename" ;;
    zathura --fork "$filename" ;;
*.epub )
    #2>/dev/null 1>&2 nohup ebook-viewer "$filename" & 
    open "$filename" ;;
esac

#sleep 1
