#!/bin/bash

cd $HOME/Downloads/ebooks/

name=$(fd -e epub -e pdf -e djvu | while read line ; 
do
    basename "$line"
done | fzf)

echo $name

filename=$(fd "$name")
echo "Opening " $filename

case "$name" in 
*.pdf )
    nohup zathura "$filename" & ;;
*.djvu )
    nohup zathura "$filename" & ;;
*.epub )
    #2>/dev/null 1>&2 nohup ebook-viewer "$filename" & 
    nohup zathura "$filename" & ;;
esac

sleep 3
